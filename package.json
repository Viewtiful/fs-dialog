{
  "description": "An accessible standard dialog for FamilySearch.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fs-webdev/fs-dialog.git"
  },
  "homepage": "https://github.com/fs-webdev/fs-dialog#readme",
  "name": "fs-dialog",
  "version": "4.1.5",
  "directories": {
    "test": "test"
  },
  "author": {
    "name": "FamilySearch",
    "url": "https://familysearch.org/"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/fs-webdev/fs-dialog/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "css-slam": "^2.0.2",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-replace": "^0.6.1",
    "gulp-uglify": "^3.0.0",
    "polymer-build": "^2.1.1",
    "fs-common-build-scripts": "github:fs-webdev/fs-common-build-scripts",
    "@polymer/iron-component-page": "^3.0.0-pre.18",
    "wct-browser-legacy": "^0.0.1-pre.11",
    "@webcomponents/webcomponentsjs": "^2.0.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "precommit": "node node_modules/fs-common-build-scripts/bin/pre_commit_checks.js && node_modules/fs-common-build-scripts/bin/pre_commit_commands.sh",
    "preinstall": "git config --global url.https://github.com/.insteadOf git://github.com/",
    "pretest": "gulp && semistandard --verbose '**/*.html' '**/*.js' --fix | snazzy && stylelint '**/*.html' '**/*.css' --fix",
    "standard": "semistandard --verbose '**/*.html' '**/*.js' | snazzy && stylelint '**/*.html' '**/*.css'",
    "standard-fix": "semistandard --verbose '**/*.html' '**/*.js' --fix | snazzy && stylelint '**/*.html' '**/*.css' --fix",
    "test": "wct --skip-plugin sauce",
    "test-p": "wct --skip-plugin sauce -p"
  },
  "semistandard": {
    "about": "https://github.com/Flet/semistandard#javascript-semi-standard-style",
    "globals": [
      "__actions__",
      "__services__",
      "__state__",
      "after",
      "afterEach",
      "axe",
      "before",
      "beforeEach",
      "customElements",
      "CustomEvent",
      "describe",
      "Event",
      "expect",
      "fixture",
      "FS",
      "FsBehaviors",
      "Headers",
      "HTMLElement",
      "indexedDB",
      "it",
      "location",
      "Polymer",
      "ResettablePropertiesBehavior",
      "sessionStorage",
      "sinon",
      "WCI18n"
    ],
    "ignore": [
      "**/*bower_components*/**",
      "**/*min.*",
      "**/*node_modules*/**",
      "**/*polyfill*",
      "**/demo/**",
      "**/reports/**",
      "**/test/**",
      "**/vendor/**",
      "analysis.json",
      "gulpfile.js"
    ],
    "plugin": "html"
  },
  "stylelint": {
    "about": "https://github.com/stylelint/stylelint/blob/master/docs/user-guide/rules.md#possible-errors",
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "**/bower_components/**.*",
      "**/node_modules/**.*",
      "**/reports/**.*",
      "**/test/**.*"
    ],
    "rules": {
      "indentation": 2,
      "media-feature-colon-space-after": null,
      "selector-type-no-unknown": null,
      "unit-whitelist": [
        "%",
        "deg",
        "em",
        "px",
        "rem",
        "s",
        "vh",
        "vw"
      ]
    }
  },
  "resolutions": {
    "inherits": "2.0.3",
    "samsam": "1.1.3",
    "supports-color": "3.1.2",
    "type-detect": "1.0.0",
    "@webcomponents/webcomponentsjs": "2.0.0-beta.2"
  },
  "dependencies": {
    "@polymer/lit-element": "^0.5.2",
    "a11y-enhancer": "github:straker/a11y-enhancer",
    "es6-promise": "^4.0.0",
    "fs-globals": "github:fs-webdev/fs-globals#es-module",
    "fs-styles": "github:fs-webdev/fs-styles#es-module",
    "wc-i18n": "github:fs-webdev/wc-i18n#es-module",
    "wicg-inert": "github:straker/inert"
  }
}
